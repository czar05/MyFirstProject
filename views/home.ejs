<html>
    <head>
        <title>
        <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1>
            TODO App
        </h1>
        <hr>
        <form id="new-form" action="/create-todolist" method="POST">  
          
           <div id="des"><h3> DESCRIPTION</h3>
            <input type="text" name="description" placeholder="What do you need to do?" >
            <hr>
        </div> 
          <div id="cat">
            <h3>CATEGORY</h3>
            <label for="category">Choose a category:</label>
            <select name="category" id="category">
                
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value="Cleaning">Cleaning</option>
                <option value="Other">Other</option>
              </select>
            <h3>DUEDATE</h3>
            <input type="date" name="duedate">
            
        </div>
        <hr>
        
        <div class="button1">
            <button type="submit" id="sub">ADD TASK</button>
            
            </div>
        </form>
        
        
        
           <form action="/delete-task" method="POST">
            <div class="button2">
           
                <button type="submit" id="del"> DELETE TASKS</button>
                
            </div>
            
                        <% if(locals.Todo_list){%>
                              <% for(let i of locals.Todo_list){ %>
                              
                        <div id="card">    
                         <input type="checkbox" value="<%= i._id %>" name="selecttodo">
                                 
                             <p>   <%= i.description %> </p>
                                
                             <p>   <%= i.duedate %> </p>
                                  <div id="category1">
                             <p> <%= i.category %> </p>
                            </div>
                            </div>
                              <%}%>
                            <%}else{%>
                            
                             <%}%>
               
        
    </form>
    </body>
</html>